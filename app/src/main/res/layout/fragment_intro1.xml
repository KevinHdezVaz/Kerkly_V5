<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:layout_height="match_parent"



    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/inicio1">
    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/waveHeader"
        app:mwhVelocity="2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:mwhStartColor="@color/purple_700"
        app:mwhCloseColor="@color/fondo1"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/Animacion"
            android:layout_width="250dp"
            android:layout_height="250dp"


            android:layout_marginBottom="60dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/servicios">


        </com.airbnb.lottie.LottieAnimationView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/passion_one_bold"
            android:gravity="center"
            android:text="Â¿Requieres de algun servicio rapidamente?"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:text="Con KERKLY eso ya no es un problema."
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

    </LinearLayout>

</RelativeLayout>